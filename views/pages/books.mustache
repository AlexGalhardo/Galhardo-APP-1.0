{{>partials/header}}

	<div class="container col-lg-12">

      	<div class="row">

            {{^books}}
                {{^book}}
                    <div class="text-center alert alert-warning" role="alert" class="mb-3">
                        <b class="fw-bold">No books found!</b>
                    </div>
                {{/book}}
            {{/books}}


            {{#flash_success}}
                <div class="text-center alert alert-success" role="alert">
                    <b>{{flash_success}}</b>
                </div>
            {{/flash_success}}

            {{#flash_warning}}
                <div class="text-center alert alert-warning" role="alert">
                    <b>{{flash_warning}}</b>
                </div>
            {{/flash_warning}}



            {{#book}}

                <div class="col-lg-3 text-center">
                    <img id="book_image" src="{{image}}" class="shadow-sm mx-auto d-block w-75 image-fluid mb-3" alt="book_image">

                    <a id="book_amazon_link" href="{{amazon_link}}" target="_blank"><img src="/images/amazon-button.png" class="image-fluid mb-3"></a>

                    <button class="w-75 btn btn-outline-danger shadow mb-3" type="submit" onclick="recommendOtherBook()">
                            <i class="bi bi-play-fill"></i>
                            Recommend Other
                    </button>

                    {{#user.admin}}
                        <a href="/admin/update/book/{{id}}" class="w-75 shadow mb-2 btn btn-warning shadow-sm">
                        <i class="bi bi-unlock-fill"></i>
                        Edit This Book</a>
                    {{/user.admin}}
                </div>



                <div class="col-lg-6">

                    <div class="card-body">

                        <input id="book_id" name="book_id" type="hidden" value="{{id}}">

                        <div class="d-flex justify-content-between alert alert-warning pd-2">
                            <h5 class="card-title">
                                <a target="_blank" id="amazon_link" style="text-decoration:none;" href="{{amazon_link}}" class="card-link">
                                    <span id="book_title" class="fw-bold text-primary">{{title}}</span>
                                    (<span id="book_year_release" class="text-muted">{{year_release}}</span>)
                                </a>
                            </h5>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button disabled class="w-25 btn btn-sm btn-outline-success mb-3 me-5" type="submit" onclick="recommendThisBook()" title="12392 People Recommend this Book!">
                                    <i class="bi bi-hand-thumbs-up"></i>
                                    12392
                            </button>

                            <button disabled class="w-25 btn btn-sm btn-outline-danger mb-3" type="submit" onclick="dontRecommendThisBook()" title="122 People Dont Recommend this Books!">
                                    <i class="bi bi-hand-thumbs-down"></i>
                                    122
                            </button>
                        </div>

                        <p class="card-text" id="book_resume">{{resume}}</p>

                        <ul class="list-group list-group-flush">

                            <li class="list-group-item"><b>Author:</b> <small id="book_author">{{author}}</small></li>

                            <li class="list-group-item"><b>Genres:</b> <small id="book_genres">{{genres}}</small></li>

                            <li class="list-group-item"><b>Pages:</b> <small id="book_pages">{{pages}}</small></li>
                        </ul>
                    </div>
                </div>
                <!-- END BOOK POST -->


                <div class="col-lg-3 mb-3">

                    <form class="mb-3" action="/searchBook" method="GET">
                        <input class="form-control" type="search" placeholder="Search book title" aria-label="Search" name="title">
                    </form>

                    <div class="list-group">
                        <a href="/" class="list-group-item list-group-item-action" aria-current="true">
                            <i class="bi bi-controller"></i>
                            Games
                        </a>

                        <a href="/books" class="list-group-item list-group-item-action bg-dark text-white">
                            <i class="bi bi-book"></i>
                            Books
                        </a>
                    </div>

                    {{^user}}
                        <div class="card mt-3">
                            <div class="card-body text-center">
                                <form method="POST" action="/">
                                    <h5 class="card-title fw-bold text-success">Newsletter</h5>
                                    <small>Get the best news about games and books once a week!</small>
                                    <input class="form-control mt-2" type="text" placeholder="Enter your email" aria-label="Search">
                                    <div class="form-check mt-2 text-start">
                                        <input type="checkbox" class="form-check-input" id="checkbox_policy">
                                        <label class="form-check-label" for="checkbox_policy">
                                            <small>
                                                You agree with our
                                                <a href="/privacy">Privacy and Terms of Use Policy</a> and accept to receive offers and advertisements.
                                            </small>
                                        </label>
                                    </div>
                                    <button type="submit" class="mt-3 w-100 btn btn-sm btn-outline-success">Subscribe to newsletter</button>
                                </form>
                            </div>
                        </div>
                    {{/user}}
                </div>
            {{/book}}







            {{#books}}

                <div class="col-lg-3 text-center">
                    <img id="book_image" src="{{image}}" class="shadow-sm mx-auto d-block w-75 image-fluid mb-3" alt="book_image">

                    <a id="book_amazon_link" href="{{amazon_link}}" target="_blank"><img src="/images/amazon-button.png" class="image-fluid mb-3"></a>

                    <button class="w-75 btn btn-outline-danger shadow mb-3" type="submit" onclick="recommendOtherBook()">
