{{>partials/header}}

	<div class="container col-lg-12 mt-3">

      	<div class="row">

            {{#flash}}
                <div class="text-center alert alert-{{type}}" role="alert" class="mb-3">
                    <b class="fw-bold">{{message}}</b>
                </div>
            {{/flash}}

            {{^book}}
                <div class="text-center alert alert-warning" role="alert" class="mb-3">
                    <b class="fw-bold">No books found!</b>
                </div>
            {{/book}}


            {{#book}}

            <div class="col-lg-3 text-center">
                <img id="book_image" src="{{image}}" class="shadow-sm mx-auto d-block w-75 image-fluid mb-3" alt="book_image">

                <a id="book_amazon_link" href="{{amazon_link}}" target="_blank"><img src="/images/amazon-button.png" class="image-fluid mb-3"></a>

                <button class="w-75 btn btn-primary shadow mb-3" type="submit" onclick="recommendOtherBook()">
                        <i class="bi bi-play-fill"></i> 
                        Recommend Other
                </button>

                {{#user.admin}}
                    <a href="/admin/update/book/{{id}}" class="w-75 shadow mb-2 btn btn-warning shadow-sm">
                    <i class="bi bi-unlock-fill"></i>
                    Edit This Book</a>
                {{/user.admin}}
            </div>
            


            <div class="col-lg-7">
                <div class="card-body">
                    
                    <div class="d-flex justify-content-between alert alert-warning pd-2">
                        <h5 class="card-title">
                            <a target="_blank" id="amazon_link" style="text-decoration:none;" href="{{amazon_link}}" class="card-link">
                                <span id="book_title">{{title}}</span>
                                (<span id="book_year_release" class="text-muted">
                                    {{year_release}}
                                </span>) 
                            </a>
                        </h5>
                    </div>
                    
                    <input id="book_id" name="book_id" type="hidden" value="{{id}}">
                    
                    <p class="card-text" id="book_resume">{{resume}}</p>
                    
                    <ul class="list-group list-group-flush">
                        
                        <li class="list-group-item"><b>Author:</b> <small id="book_author">{{author}}</small></li>
                        
                        <li class="list-group-item"><b>Genres:</b> <small id="book_genres">{{genres}}</small></li>

                        <li class="list-group-item"><b>Pages:</b> <small id="book_pages">{{pages}}</small></li>
                    </ul>
                </div>
            </div>
            <!-- END GAME POST -->

            {{/book}}

            <!-- COL-LG-2 -->
            <div class="col-lg-2 mb-3">
                <div class="list-group">
                    <a href="/" class="list-group-item list-group-item-action" aria-current="true">
                        <i class="bi bi-controller"></i> 
                        Games
                    </a>
                      
                    <a href="/books" class="list-group-item list-group-item-action bg-dark text-white">
                        <i class="bi bi-book"></i> 
                        Books
                    </a>
                </div>
            </div>

        </div>
	
    </div>

    <script src="scripts/books.js"></script>
    <script src="scripts/navbar_apis.js"></script>
    <script src="scripts/privacy.js"></script>

{{>partials/footer}}