                            </div>
                        {{/user}}
                    </div>
                {{/firstBook}}

                {{^firstBook}}<div class="col-lg-3"></div>{{/firstBook}}

            {{/books}}


        </div>
        <!-- END ROW -->
	
    </div>
    <!-- END CONTAINER -->

