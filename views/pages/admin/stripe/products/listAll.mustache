{{>partials/header}}

	<div class="container col-lg-8 text-center mt-3">

        <div class="mb-3">
            {{#user.admin}}
                <a href="/admin/stripe/products/create" class="btn shadow-sm ms-1 me-1 btn-outline-success">Create</a>
                <a href="/admin/stripe/products/update" class="btn shadow-sm ms-1 me-1 btn-outline-warning">Update</a>
                <a href="/admin/stripe/products/delete" class="btn shadow-sm ms-1 me-1 btn-outline-danger">Delete</a>
            {{/user.admin}}
            <a href="/admin/stripe/products/retrieve" class="btn shadow-sm ms-1 me-1 btn-outline-primary">Retrieve</a>
            <a href="/admin/stripe/products/listAll" class="btn shadow-sm ms-1 me-1 btn-info">ListAll</a>
        </div>

        <div class="row">

            <h3 class="fw-bold text-info mb-3">
              <i class="bi bi-list-ul"></i> LIST Last {{lastProductsCreated}} Products Created
            </h3>

            <a target="_blank" href="https://stripe.com/docs/api/products/list">https://stripe.com/docs/api/products/list</a>

            <table class="table table-over mt-3">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">ACTIVE</th>
                        <th scope="col">NAME</th>
                        <th scope="col">CREATED AT</th>
                    </tr>
                </thead>
                <tbody>
                    {{#products}}
                        <tr>
                            <th>{{id}}</th>
                            <td>{{active}}</td>
                            <td>{{name}}</td>
                            <td>{{created}}</td>
                        </tr>
                    {{/products}}
                </tbody>
            </table>

        </div>

	</div>

{{>partials/footer}}