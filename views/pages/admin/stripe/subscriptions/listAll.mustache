{{>partials/header}}

	<div class="container col-lg-12 text-center mt-3">

        <div class="mb-3">
            {{#user.admin}}
                <a href="/admin/stripe/subscriptions/create" class="btn shadow-sm ms-1 me-1 btn-outline-success">Create</a>
                <a href="/admin/stripe/subscriptions/cancel" class="btn shadow-sm ms-1 me-1 btn-outline-danger">Cancel</a>
            {{/user.admin}}
            <a href="/admin/stripe/subscriptions/retrieve" class="btn shadow-sm ms-1 me-1 btn-outline-primary">Retrieve</a>
            <a href="/admin/stripe/subscriptions/listAll" class="btn shadow-sm ms-1 me-1 btn-info">List All</a>
        </div>

        <div class="row">

            <h3 class="fw-bold text-info mb-3">
              <i class="bi bi-list-ul"></i> LIST Last {{lastSubsCreated}} SUBS Created
            </h3>

            <a target="_blank" href="https://stripe.com/docs/api/subscriptions/list">https://stripe.com/docs/api/subscriptions/list</a>

            <table class="table table-over mt-5">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">CUSTOMER</th>
                        <th scope="col">STATUS</th>
                        <th scope="col">current_period_start</th>
                        <th scope="col">current_period_end</th>
                        <th scope="col">CREATED AT</th>
                    </tr>
                </thead>
                <tbody>
                    {{#subscriptions}}
                        <tr>
                            <th>{{id}}</th>
                            <td>{{customer}}</td>
                            <td>{{status}}</td>
                            <td>{{current_period_start}}</td>
                            <td>{{current_period_end}}</td>
                            <td>{{created}}</td>
                        </tr>
                    {{/subscriptions}}
                </tbody>
            </table>

        </div>

	</div>

{{>partials/footer}}