{{>partials/header}}

	<div class="container col-lg-12 text-center mt-3">

        <div class="mb-3">
            {{#user.admin}}
                <a href="/admin/stripe/charges/create" class="btn shadow-sm ms-1 me-1 btn-outline-success">Create</a>
            {{/user.admin}}
            <a href="/admin/stripe/charges/retrieve" class="btn shadow-sm ms-1 me-1 btn-outline-primary">Retrieve</a>
            <a href="/admin/stripe/charges/listAll" class="btn shadow-sm ms-1 me-1 btn-info">List All</a>
        </div>

        <div class="row">

            <h3 class="fw-bold text-info mb-3">
              <i class="bi bi-list-ul"></i> LIST LAST {{totalCharges}} Charges Created
            </h3>

            <a target="_blank" href="https://stripe.com/docs/api/charges/list">https://stripe.com/docs/api/charges/list</a>

            <table class="table table-over mt-5">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">STATUS</th>
                        <th scope="col">AMOUNT</th>
                        <th scope="col">CURRENCY</th>
                        <th scope="col">CREATED AT</th>
                    </tr>
                </thead>
                <tbody>
                    {{#charges}}
                        <tr>
                            <th>{{id}}</th>
                            <td>{{status}}</td>
                            <td>{{amount}}</td>
                            <td>{{currency}}</td>
                            <td>{{created}}</td>
                        </tr>
                    {{/charges}}
                </tbody>
            </table>

        </div>

	</div>

{{>partials/footer}}