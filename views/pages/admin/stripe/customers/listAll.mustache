{{>partials/header}}

	<div class="container col-lg-8 text-center mt-3">

        <div class="mb-3">
            {{#user.admin}}
                <a href="/admin/stripe/customers/create" class="btn shadow-sm ms-1 me-1 btn-outline-success">Create</a>
                <a href="/admin/stripe/customers/update" class="btn shadow-sm ms-1 me-1 btn-outline-warning">Update</a>
                <a href="/admin/stripe/customers/delete" class="btn shadow-sm ms-1 me-1 btn-outline-danger">Delete</a>
            {{/user.admin}}
            <a href="/admin/stripe/customers/retrieve" class="btn shadow-sm ms-1 me-1 btn-outline-primary">Retrieve</a>
            <a href="/admin/stripe/customers/listAll" class="btn shadow-sm ms-1 me-1 btn-info">List All</a>
        </div>

        <div class="row">

            <h3 class="fw-bold text-info mb-3">
              <i class="bi bi-list-ul"></i> LIST Last {{lastUsersCreated}} Customers Created
            </h3>

            <a target="_blank" href="https://stripe.com/docs/api/customers/list">https://stripe.com/docs/api/customers/list</a>

            <table class="table table-over mt-3">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">NAME</th>
                        <th scope="col">EMAIL</th>
                        <th scope="col">CREATED AT</th>
                    </tr>
                </thead>
                <tbody>
                    {{#customers}}
                        <tr>
                            <th>{{id}}</th>
                            <td>{{name}}</td>
                            <td>{{email}}</td>
                            <td>{{created}}</td>
                        </tr>
                    {{/customers}}
                </tbody>
            </table>

        </div>

	</div>

{{>partials/footer}}