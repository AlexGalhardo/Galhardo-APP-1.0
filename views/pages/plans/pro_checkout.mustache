{{>partials/header}}

    {{#user}}

    <div class="container col-lg-7 mt-3">

        <div class="row">

            {{#flash}}
                <div class="text-center alert alert-{{type}}" role="alert" class="mb-3">
                    <b class="fw-bold">{{message}}</b>
                </div>
            {{/flash}}

            <form id="formCreditCard" action="/plan/pro/checkout" method="POST">

                <div class="row">

                    <div class="col-lg-6">

                        <div class="card mb-4 rounded-3 shadow-sm text-center">
                            <div class="card-header py-3 bg-danger">
                                <h4 class="my-0 fw-normal">PRO</h4>
                            </div>
                            <div class="card-body">
                                <h1 class="card-title pricing-card-title">$2.99<small class="text-muted fw-light">/month</small></h1>
                                <ul class="list-unstyled mt-3 mb-4">
                                    <li>✔️ Support via Telegram/WhatsApp</li>
                                    <li>✔️ Ilimited Recomendations</li>
                                    <li>❌ Get news in email</li>
                                </ul>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="email" name="customer_email" class="form-control" id="customer_email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required autofocus value="{{email}}" readonly>
                            <label for="customer_email">Email</label>
                        </div>

                        <!-- CONFIRM PASSWORD -->
                        <div class="form-floating">
                            <input id="password" name="password" value="" type="password" class="form-control" placeholder="Confirm your password" required minlength="6">
                            <label for="password">Confirm Password</label>
                        </div>


                        <br>

                    </div>
                    <!-- END COL LG 5 -->



                    <div class="col-lg-6">

                        {{#user.stripe.card_id}}
                            <div class="form-floating mb-3">
                                <select name="customer_stripe_card_id" class="form-select" id="stripe_card_id">
                                    <option value="{{user.stripe.card_id}}" selected>{{user.stripe.card_id}}</option>
                                </select>
                                <label for="stripe_card_id">PAY WITH YOUR STRIPE CARD_ID</label>
                            </div>

                            <div class="form-floating mb-3">
                                  <input id="stripe_card_holder_id" name="stripe_card_holder_id" class="mb-2 form-control" type="text" value="{{user.stripe.card_holder_name}}" readonly>
                                  <label for="stripe_card_holder_id">STRIPE_CARD_HOLDER_NAME</label>
                            </div>

                            <div class="form-floating mb-3">
                                  <input id="stripe_card_last_4_digits" name="stripe_card_last_4_digits" class="mb-2 form-control" type="text" value="{{user.stripe.card_last_4_digits}}" readonly>
                                  <label for="stripe_card_last_4_digits">STRIPE_CARD_LAST_4_DIGITS</label>
                            </div>

                            <div class="row g-2">
                              <div class="col-md">
                                <div class="form-floating">
                                  <input type="text" class="form-control" name="card_exp_year" id="card_exp_month" value="{{stripe.card_exp_month}}" readonly>
                                  <label for="card_exp_month">CARD_EXP_MONTH</label>
                                </div>
                              </div>
                              <div class="col-md">
                                <div class="form-floating">
                                  <input type="text" class="form-control" name="card_exp_year" id="card_exp_year" value="{{stripe.card_exp_year}}" readonly>
                                  <label for="card_exp_year">CARD_EXP_YEAR</label>
                                </div>
                              </div>
                            </div>
                        {{/user.stripe.card_id}}


                        {{^user.stripe.card_id}}
                        <div id="credit-card" class="tab-pane fade show active pt-3">

                            <div id="div_credit_card"></div>

                            <div class="form-group mb-2">
                                <br>
                                <input type="text" name="holder_name" placeholder="Credit Card Holder Name" required class="form-control" value="Test">
                            </div>

                            <div class="form-group mb-2">
                                <div class="input-group">
                                    <input type="text" name="card_number" placeholder="Credit Card Number" class="form-control" value="4242424242424242" required>
                                    <div class="input-group-append"> <span class="input-group-text text-muted"> <i class="bi bi-credit-card h-100"></i> </span> </div>
                                </div>
                            </div>


                            <div class="row g-2">
                              <div class="col-md">
                                <div class="form-floating">
                                  <input type="text" class="form-control" name="card_exp_year" id="card_exp_month" value="{{stripe.card_exp_month}}">
                                  <label for="card_exp_month">CARD_EXPIRATION_MONTH</label>
                                </div>
                              </div>
                              <div class="col-md">
                                <div class="form-floating">
                                  <input type="text" class="form-control" name="card_exp_year" id="card_exp_year" value="{{stripe.card_exp_year}}">
                                  <label for="card_exp_year">CARD_EXPIRATION_YEAR</label>
                                </div>
                              </div>
                            </div>

                            {{/user.stripe.card_id}}

                            <input type="text" name="plan_name" value="pro" hidden>
                            
                            <div>
                                <button type="submit" class="mt-3 btn btn-outline-success btn-block shadow w-100">
                                    <span>Pay $2.99/Month</span>
                                </button>
                            </div>

                        </div>

                    </div>

                </div>
                <!-- end row -->

            </form>


        </div>

    </div>

    
    <script src="/scripts/jquery.min.js"></script>
    <script src="/scripts/jquery.card.js"></script>
    <script src="/scripts/render_credit_card.js"></script>

    <script src="../../scripts/navbar_apis.js"></script>
    <script src="../../scripts/privacy.js"></script>

    {{/user}}
    


{{>partials/footer}}
