<html lang="en-US">

<head>

    <title>Register Account</title>

    <meta charset="utf-8">

    <link rel="shortcut icon" href="images/favicon.png" />

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

</head>

<body class="bg-light">

    <div class="container col-lg-3 mt-5">

        <h2 class="text-center text-muted mb-4">
            <a class="text-decoration-none" href="/">
                <b>
                    <i class="bi bi-star"></i>
                    Galhardo APP
                </b>
            </a>
        </h2>

        {{#flash}}
            <div class="text-center alert alert-{{type}}" role="alert" class="mb-3">
                <b>{{message}}</b>
            </div>
        {{/flash}}

        <form action="/register" method="POST" id="form_register">

            {{#github_id}}
                <input value="{{github_id}}" name="github_id" hidden onkeydown="return false;">
            {{/github_id}}

            {{#google_id}}
                <input value="{{google_id}}" name="google_id" hidden onkeydown="return false;">
            {{/google_id}}

            {{#facebook_id}}
                <input value="{{facebook_id}}" name="facebook_id" hidden onkeydown="return false;">
            {{/facebook_id}}

            <div class="form-floating mb-3">
                <input type="text" class="form-control mb-3" id="username" name="username" placeholder="Enter your username" required autofocus value="{{name}}" minlength="4" maxlength="32">
                <label for="username">Username</label>
            </div>

            <small><span id="alert_email" class="fw-bold text-danger"></span></small>

            <div class="form-floating mb-3">
                <input type="text" class="form-control mb-3" name="email" id="email" placeholder="Enter your email" required value="{{email}}" {{#email_readonly}}onkeydown="return false;"{{/email_readonly}}>
                <label for="email">Email</label>
            </div>

            <small><span id="alert_password" class="fw-bold text-danger"></span></small>

            <div class="form-floating mb-3">
                <input type="password" class="mb-3 form-control" id="password" name="password" placeholder="Enter your password" minlength="6" required>
                <label for="password">Password</label>
            </div>

            <div class="form-floating mb-3">
                <input type="password" class="mb-3 form-control" id="confirm_password" name="confirm_password" placeholder="Confirm your password" minlength="6" required>
                <label for="confirm_password">Confirm Password</label>
            </div>

            <div class="mb-3 form-check">
                <small><span id="alert_checkbox" class="fw-bold text-danger"></span></small>
                <input type="checkbox" class="form-check-input" id="checkbox_policy">
                <label class="form-check-label" for="checkbox_policy">
                    <small>
                        By registering your account, you agree with our
                        <a href="/privacy">Privacy and Terms of Use Policy</a>
                    </small>
                </label>
            </div>

            <div class="form-group">
                <button type="submit" class="shadow mb-3 w-100 btn btn-primary btn-block login-btn" id="button_register">Register Account</button>
            </div>

        </form>

        <div class="text-center">
            <small>Already have a account?
                <a href="/login" class="text-success"><b>Login Now!</b></a>
            </small>
        </div>

        <footer class="mt-3 mb-3 text-center">
            <small>Created by Â© <a target="_blank" href="https://github.com/alexgalhardo">Alex Galhardo</a> | 2021-Present</small>
        </footer>

    </div>

    <script src="scripts/register.js"></script>

    </script>

</body>

</html>
