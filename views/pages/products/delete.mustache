{{>partials/header}}

    <div class="container col-lg-8 text-center mt-3">

        <div class="row">

            <h3 class="fw-bold text-danger mb-3">
                <i class="bi bi-trash"></i> DELETE Product
            </h3>

            <a class="mb-5" target="_blank" href="https://stripe.com/docs/api/products/delete">https://stripe.com/docs/api/products/delete</a>

            <div class="col-lg-5">
  		
        		<form action="/products/delete" method="POST" class="mb-3">
        			<div class="form-floating mb-3">
        			  	<input type="text" class="form-control" name="product_id" id="product_id" required autofocus>
        			  	<label for="product_id">PRODUCT_ID</label>
        			</div>

        			<button type="submit" class="btn btn-outline-danger w-100 shadow">Delete Product</button>
        		</form>

            </div>


            <div class="col-lg-7">
        		{{#flash}}
        			<div class="alert alert-{{type}}" role="alert" class="mb-3">
        				{{message}}
        			</div>
        		{{/flash}}

        		{{#product}}
        			<ul class="list-group list-group-flush">
                        <li class="list-group-item"><b>ID:</b> {{id}}</li>
                        <li class="list-group-item"><b>DELETED:</b> {{deleted}}</li>
                    </ul>
        		{{/product}}
            </div>

        </div>

	</div>

{{>partials/footer}}