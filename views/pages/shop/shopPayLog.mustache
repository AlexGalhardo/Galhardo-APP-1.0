{{>partials/header}}

	<div class="container col-lg-12 mt-3 mx-auto">

		{{#flash_success}}
			<div class="text-center alert alert-success" role="alert">
				<b>{{flash_success}}</b>
			</div>
		{{/flash_success}}

		<div class="row">

			<div class="col-lg-4 mb-3">
	                    
	            <ul class="list-group text-center">
	                
                    {{#shopTransactionObject.products}}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <p>{{title}}<p>
                            <b>R$<span id="priceOranges"> {{unit_price}}</span></b>
                        </li>
                    {{/shopTransactionObject.products}}

	                <li class="list-group-item d-flex justify-content-between align-items-center">
	                    Frete Correios
	                    <b>$ <span>{{shopTransactionObject.shipping.fee}}</span></b>
	                </li>

	                <li class="list-group-item d-flex justify-content-between align-items-center bg-warning">
	                    <b>TOTAL</b>  
	                    <b>$ <span>{{shopTransactionObject.total_amount}}</span></b>
	                </li>
	            
	            </ul>

	        </div>



			<div class="col-lg-4">
    			<ul class="list-group list-group-flush text-start">
                    <li class="list-group-item"><b>ID TRANSAÇÃO:</b> {{shopTransactionObject.transaction_id}}</li>
                    <li class="list-group-item"><b>GATEWAY:</b> PagarME</li>
                    <li class="list-group-item"><b>MOEDA:</b> {{shopTransactionObject.currency}}</li>
                    <li class="list-group-item"><b>TOTAL:</b> {{shopTransactionObject.total_amount}}</li>
                    <li class="list-group-item"><b>STATUS:</b> {{shopTransactionObject.status}}</li>
                    <li class="list-group-item"><b>MÉTODO PAGAMENTO:</b> {{shopTransactionObject.payment_method.card_id}}</li>
                    <li class="list-group-item"><b>Prazo de Entrega:</b> {{shopTransactionObject.shipping.deadline}} Dias</li>
                    <li class="list-group-item"><b>CRIADO EM:</b> {{shopTransactionObject.created_at}}</li>
                </ul>
	        </div>


	        <div class="col-lg-4">
    			<ul class="list-group list-group-flush text-start">
                    <li class="list-group-item"><b>CLIENTE:</b> {{shopTransactionObject.customer.name}}</li>
                    <li class="list-group-item"><b>TELEPHONE:</b> {{shopTransactionObject.customer.phone}}</li>
                    <li class="list-group-item"><b>EMAIL:</b> {{shopTransactionObject.customer.email}}</li>
                    <li class="list-group-item"><b>CEP:</b> {{shopTransactionObject.shipping.address_zipcode}}</li>
                    <li class="list-group-item"><b>ENDEREÇO:</b> {{shopTransactionObject.shipping.address_street}}</li>
                    <li class="list-group-item"><b>BAIRRO:</b> {{shopTransactionObject.shipping.address_neighborhood}}</li>
                    <li class="list-group-item"><b>CIDADE:</b> {{shopTransactionObject.shipping.address_city}}</li>
                    <li class="list-group-item"><b>ESTADO:</b> {{shopTransactionObject.shipping.address_state}}</li>
                    <li class="list-group-item"><b>PAÍS:</b> {{shopTransactionObject.shipping.address_country}}</li>
                    <li class="list-group-item"><b>TRANSPORTADORA:</b> {{shopTransactionObject.shipping.carrier}}</li>
                </ul>
	        </div>

	    </div>

	</div>

{{>partials/footer}}
