{{>partials/header}}

	<div class="container col-lg-12 mt-3 mx-auto">

        {{^user}}
            <div class="text-center alert alert-warning mb-5" role="alert" class="mb-3">
                <h2 class="fw-bold">You must be loged in to use shop!</h2>
            </div>
        {{/user}}
        

        {{#user}}

        <form id="formCreditCard" action="/shop" method="POST">

          	<div class="row">

                {{#flash}}
                    <div class="text-center alert alert-{{type}}" role="alert" class="mb-3">
                        <b class="fw-bold">{{message}}</b>
                    </div>
                {{/flash}}

                <!-- START COL-LG-3 -->
                <div class="col-lg-3 mb-3">
                    
                    <ul class="list-group text-center">
                        
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <input name="quantityOranges" class="form-control w-25" type="number" min="1" max="10" step="1" value="1" id="quantityOranges">
                            Oranges  
                            <b>$<span id="priceOranges">0.49</span></b>
                        </li>
                          
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <input name="quantityGrapes" class="form-control w-25" type="number" min="1" max="10" step="1" value="1" id="quantityGrapes">
                            Grapes  
                            <b>$<span id="priceGrapes">0.99</span></b>
                        </li>
                          
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <input name="quantityApples" class="form-control w-25" type="number" min="1" max="10" step="1" value="1" id="quantityApples">
                            Apples  
                            <b>$<span id="priceApples">1.99</span></b>
                        </li>
                          
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <input name="quantityStrawberries" class="form-control w-25" type="number" min="1" max="10" step="1" value="1" id="quantityStrawberries">
                            Strawberries  
                            <b>$<span id="priceStrawberries">2.99</span></b>
                        </li>

                        <li class="list-group-item d-flex justify-content-between align-items-center bg-warning">
                            <b>TOTAL</b>  
                            <b>$ <span id="total_shop_cart">6.46</span></b>
                        </li>
                    
                    </ul>

                </div>
                <!-- END COL-LG-3 -->  


                <!-- START COL-LG-4 -->
                <div class="col-lg-4">

                    <div class="form-floating mb-3">
                      <input type="email" class="form-control" name="name" id="name" value="{{name}}">
                      <label for="name">NAME</label>
                    </div>

                    <div class="form-floating mb-3">
                      <input type="email" class="form-control" name="email" id="email" value="{{email}}">
                      <label for="floatingInput">EMAIL</label>
                    </div>

                    <div class="form-floating mb-3">
                      <input type="text" minlength="11" maxlength="11" pattern="\d{3}\.?\d{3}\.?\d{3}-?\d{2}" class="form-control" id="document" name="document" value="{{document}}">
                      <label for="document">DOCUMENT</label>
                    </div>

                    <div class="form-floating mb-3">
                      <input class="mb-2 form-control" id="phone" type="text" name="phone" pattern="\d{3}\.?\d{3}\.?\d{3}-?\d{2}" minlength="11" maxlength="11" placeholder="Digit your cellphone" value="{{phone}}" required>
                      <label for="phone">PHONE</label>
                    </div>


                    <div class="form-floating mb-3">
                      <input class="form-control" type="date" name="birth_date" id="birth_date"  value="{{birth_date}}" required>
                      <label for="document">BIRTH_DATE</label>
                    </div>

                    <div class="form-floating mb-3">
                      <input type="password" class="form-control" id="confirm_password" name="confirm_password">
                      <label for="confirm_password">CONFIRM_PASSWORD</label>
                    </div>


                    <br>

                    <div class="form-floating mb-3">
                          <input class="mb-2 form-control" id="zipcode" type="text" name="zipcode" pattern= "\d{5}-?\d{3}"  value="" required>
                          <label for="zipcode">ZIPCODE</label>
                    </div>

                    <div class="row">

                        <!-- STREET -->
                        <div class="col-sm-12 mb-2">
                          <input type="text" class="form-control" id="customer_street" name="customer_street" placeholder="Street" value="" required onkeydown="return false;">
                        </div>

                        <!-- NEIGHBORHOOD -->
                        <div class="col-sm-12 mb-2">
                          <input type="text" class="form-control" id="customer_neighborhood" name="neighborhood" placeholder="Neighborhood" value="" required onkeydown="return false;">
                        </div>

                        <!-- CITY -->
                        <div class="col-sm-12 mb-2">
                          <input type="text" class="form-control" id="customer_city" name="customer_city" placeholder="City" value="" required onkeydown="return false;">
                        </div>

                        <!-- STATE -->
                        <div class="col-sm-12 mb-2">
                          <input type="text" class="form-control" id="customer_state" name="customer_state" placeholder="State" value="" required onkeydown="return false;">
                        </div>

                        <label for="shipping_fee" class="col-sm-5 col-form-label">Shipping Fee R$</label>
                        <div class="col-sm-7 mb-3">
                            <!-- SHIPMENT_PRICE -->
                            <input type="text" class="form-control" value="" placeholder="Shipment Price" name="shipping_fee" id="shipping_fee" required onkeydown="return false;">
                        </div>
                        
                        <label for="shipping_deadline" class="col-sm-5 col-form-label">Deadline (days)</label>
                        <div class="col-sm-7">
                            <!-- SHIPMENT__TIME -->
                            <input type="text" class="form-control" value="" placeholder="Delivery Time" name="shipping_deadline" id="shipping_deadline" required onkeydown="return false;">
                        </div>

                    </div>
                    <!-- END FORM-GROUP-ROW -->

                    <br>

                </div>
                <!-- END COL-LG-4 -->


                <div class="col-lg-4">


                    <div id="credit-card" class="tab-pane fade show active pt-3">

                        <div id="div_credit_card"></div>

                        <div class="form-floating mb-3 mt-3">
                          <input type="email" class="form-control" name="holder_name" id="holder_name" value="{{stripe.card_holder_name}}">
                          <label for="holder_name">CARD_HOLDER_NAME</label>
                        </div>

                        <div class="form-group mb-2">
                            <div class="input-group">
                                <input type="text" name="card_number" placeholder="Credit Card Number" class="form-control" value="4242424242424242" required>
                                <div class="input-group-append"> <span class="input-group-text text-muted"> <i class="bi bi-credit-card h-100"></i> </span> </div>
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-sm-8">
                                <div class="form-group">
                                    <span class="hidden-xs">
                                        <h6 class="text-muted small">Expiration Date</h6>
                                    </span>
                                    <div class="input-group">
                                        <input type="number" placeholder="Month" name="card_exp_month" class="form-control" value="08" required>
                                        <input type="number" placeholder="Year" name="card_exp_year" class="form-control" required value="2022"> 
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group mb-4">
                                    <label data-toggle="tooltip" title="Digite os 3 dígitos de segurança atrás do Credit Card.">
                                    <h6 class="text-muted small">CVV
                                        <i class="fa fa-question-circle d-inline"></i>
                                    </h6>
                                    <input type="text" name="card_cvc" required class="form-control" placeholder="Code CVV" value="314"> </div>
                            </div>
                        </div>
                        
                        <div>
                            <input type="number" value="6.46" id="input_hidden_total_shop_cart" readonly hidden>
                            <button type="submit" class="btn btn-outline-success btn-block shadow w-100">
                                Pay $<span id="button_pay_with_credit_card">6.46</span>
                            </button>
                        </div>

                    </div>


                </div>
                <!-- END COL-LG-5 -->

            </div>
            <!-- END ROW -->
		
        </form>

    </div>

	<script src="scripts/jquery.min.js"></script>
    <script src="scripts/jquery.card.js"></script>
    <script src="scripts/render_credit_card.js"></script>

    <script src="scripts/navbar_apis.js"></script>
    <script src="scripts/privacy.js"></script>

    <!-- SHIPMENT PRICE -->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="scripts/shop.js"></script>

    {{/user}}

{{>partials/footer}}