{{>partials/header}}

    {{#user}}

    <div class="container col-lg-7 mt-2">

        <div class="row">

            {{#flash_warning}}
                <div class="text-center alert alert-warning" role="alert">
                    <b>{{flash_warning}}</b>
                </div>
            {{/flash_warning}}

            <form id="formCreditCard" action="/premium/checkout" method="POST">

                <div class="row">

                    <div class="col-lg-6">

                        <div class="card mb-4 rounded-3 shadow-sm text-center">
                            <div class="card-header py-3 bg-info">
                                <h4><i class="bi bi-award"></i> Plano Premium</h4>
                            </div>
                            <div class="card-body">
                                <h1 class="card-title pricing-card-title">R$ 4.99<small class="text-muted fw-light">/mês</small></h1>
                                <ul class="list-unstyled mt-3 mb-4">
                                    <li>✔️ Acesso a nossa API</li>
                                    <li>✔️ Sem propagandas no site</li>
                                    <li>✔️ Cancele quando quiser</li>
                                    <li>✔️ Recomendações ilimitadas</li>
                                    <li>✔️ Receba recomendações via email</li>
                                    <li>✔️ Receba recomendações via telegram</li>
                                </ul>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="email" name="customer_email" class="form-control" id="customer_email" required autofocus value="{{email}}" readonly>
                            <label for="customer_email">Email</label>
                        </div>

                        <!-- CONFIRM PASSWORD -->
                        <div class="form-floating">
                            <input type="password" id="confirm_password" name="confirm_password" value="" class="form-control" required minlength="6">
                            <label for="confirm_password">Confirme sua senha</label>
                        </div>


                        <br>

                    </div>
                    <!-- END COL LG 5 -->



                    <div class="col-lg-6">

                        {{#user.pagarme.card_id}}
                            <div class="form-floating mb-3">
                                <input id="stripe_card_last_4_digits" name="stripe_card_last_4_digits" class="mb-2 form-control" type="text" value="{{user.pagarme.card_id}}" readonly>
                                <label for="stripe_card_last_4_digits">REGISTRED_PAGARME_CARD_ID</label>
                            </div>

                            <div class="form-floating mb-3">
                                  <input id="stripe_card_last_4_digits" name="stripe_card_last_4_digits" class="mb-2 form-control" type="text" value="{{user.pagarme.card_last_digits}}" readonly>
                                  <label for="stripe_card_last_4_digits">PAGARME_CARD_LAST_DIGITS</label>
                            </div>

                            <div class="form-floating mb-3">
                                  <input id="pagarme_card_expiration_date" name="pagarme_card_expiration_date" class="mb-2 form-control" type="text" value="{{user.pagarme.card_expiration_date}}" readonly>
                                  <label for="pagarme_card_expiration_date">PAGARME_CARD_EXPIRATION_DATE</label>
                            </div>
                        {{/user.pagarme.card_id}}


                        {{^user.pagarme.card_id}}
                        <div id="credit-card" class="tab-pane fade show active">

                            <div id="div_credit_card"></div>

                            <div class="form-floating mb-3 mt-3">
                                <input type="text" class="form-control" name="holder_name" id="holder_name" value="{{user.name}}">
                                <label for="holder_name">CARD_HOLDER_NAME</label>
                            </div>

                            <div class="form-group mb-2">
                                <div class="input-group">
                                    <input type="text" name="card_number" placeholder="Credit Card Number" class="form-control" value="4018720572598048" required>
                                    <div class="input-group-append"> <span class="input-group-text text-muted"> <i class="bi bi-credit-card h-100"></i> </span> </div>
                                </div>
                            </div>

                            <div class="row">

                                <div class="col-sm-8">
                                    <div class="form-group">
                                        <span class="hidden-xs">
                                            <h6 class="text-muted small">Data Expiração</h6>
                                        </span>
                                        <div class="input-group">
                                            <input type="number" placeholder="Month" name="card_exp_month" min="1" max="12" step="1" class="form-control" value="11" required>
                                            <input type="number" placeholder="Year" name="card_exp_year" min="22" step="1" class="form-control" required value="22">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group mb-2">
                                        <label data-toggle="tooltip" title="Digite os 3 dígitos de segurança atrás do Credit Card.">
                                        <h6 class="text-muted small">CVV
                                            <i class="fa fa-question-circle d-inline"></i>
                                        </h6>
                                        <input type="text" name="card_cvc" required class="form-control" placeholder="Code CVV" value="123">
                                    </div>
                                </div>
                            </div>

                            {{/user.pagarme.card_id}}

                            <div>
                                <button type="submit" class="mt-1 mb-1 btn btn-outline-success btn-block shadow w-100">
                                    <span class="fw-bold">Pagar R$ 4.99/mês</span>
                                </button>
                            </div>

                        </div>

                    </div>

                </div>
                <!-- end row -->

            </form>


        </div>

    </div>


    <script src="/scripts/jquery.min.js"></script>
    <script src="/scripts/jquery.card.js"></script>
    <script src="/scripts/render_credit_card.js"></script>

    <script src="../../scripts/navbar_apis.js"></script>
    <script src="../../scripts/privacy.js"></script>

    {{/user}}
    


{{>partials/footer}}
