{{>partials/header}}

	<div class="container col-lg-12 mt-3 mx-auto">

		{{#flash}}
			<div class="text-center alert alert-{{type}}" role="alert">
				<b>{{message}}</b>
			</div>
		{{/flash}}

		<div class="row">

            <div class="col-lg-6">

                <div class="card mb-4 rounded-3 shadow-sm text-center">
                    <div class="card-header py-3 bg-info">
                        <h4 class="my-0 fw-normal">Plan PREMIUM</h4>
                    </div>
                    
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">$ 4.99<small class="text-muted fw-light">/month</small></h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>✔️ Support via Telegram/WhatsApp</li>
                            <li>✔️ Products descounts</li>
                            <li>✔️ Ilimited Recomendations</li>
                            <li>✔️ Get news in email</li>
                        </ul>
                    </div>

                </div>

                <br>

            </div>



	        <div class="col-lg-6">
        		{{#subscription}}
        			<ul class="list-group list-group-flush text-start">
                        <li class="list-group-item"><b>SUBS_ID:</b> {{id}}</li>
                        <li class="list-group-item"><b>SUBS_STATUS:</b> {{status}}</li>
                        <li class="list-group-item"><b>CUSTOMER_ID:</b> {{customer}}</li>
                        <li class="list-group-item"><b>CUSTOMER_EMAIL:</b> {{customer_email}}</li>
                        <li class="list-group-item"><b>current_period_start:</b> {{current_period_start}}</li>
                        <li class="list-group-item"><b>current_period_end:</b> {{current_period_end}}</li>
                        <li class="list-group-item"><b>CREATED:</b> {{created}}</li>
                    </ul>
        		{{/subscription}}
	        </div>

	    </div>

	</div>

{{>partials/footer}}