{{>partials/header}}

	<div class="container col-lg-8 text-center mt-3">

        <div class="row">

            <h3 class="fw-bold text-success mb-3">
                <i class="bi bi-plus"></i> CREATE Customer
            </h3>

            <a class="mb-5" target="_blank" href="https://stripe.com/docs/api/customers/create">https://stripe.com/docs/api/customers/create</a>

            <div class="col-lg-5">
  		
        		<form action="/customers/create" method="POST" class="mb-3">
        			<div class="form-floating mb-3">
        			  	<input type="text" class="form-control" name="customer_name" id="customer_name" placeholder="Customer Name" required autofocus>
        			  	<label for="customer_name">Name</label>
        			</div>
        			
        			<div class="form-floating mb-3">
        			  	<input type="email" name="customer_email" class="form-control" id="customer_email" placeholder="email@example.com" required>
        			  	<label for="customer_email">Email address</label>
        			</div>

        			<button type="submit" class="btn btn-outline-success w-100 shadow">Create Customer</button>
        		</form>

            </div>


            <div class="col-lg-7">
        		{{#flash}}
        			<div class="alert alert-{{type}}" role="alert" class="mb-3">
        				{{message}}
        			</div>
        		{{/flash}}

        		{{#customer}}
        			<ul class="list-group list-group-flush text-start">
                        <li class="list-group-item"><b>ID:</b> {{id}}</li>
                        <li class="list-group-item"><b>NAME:</b> {{name}}</li>
                        <li class="list-group-item"><b>EMAIL:</b> {{email}}</li>
                    </ul>
        		{{/customer}}
            </div>

        </div>

	</div>

{{>partials/footer}}