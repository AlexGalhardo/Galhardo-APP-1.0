{{>partials/header}}

	<div class="container col-lg-8 text-center mt-3">

        <div class="row">

            <h3 class="fw-bold text-warning mb-3">
                <i class="bi bi-list-ul"></i> LIST Customer Credit Cards
            </h3>

            <a target="_blank" class="mb-5" href="https://stripe.com/docs/api/cards/list">
                https://stripe.com/docs/api/cards/list
            </a>

            <div class="col-lg-5">
        		<form action="/cards/listAll" method="POST" class="mb-3">
        			<div class="form-floating mb-3">
        			  	<input type="text" class="form-control" name="customer_id" id="customer_id" placeholder="Customer Name" required autofocus value="cus_Jy49RB199LvElV">
        			  	<label for="customer_id">CUSTOMER_ID</label>
        			</div>

        			<button type="submit" class="btn btn-outline-warning w-100 shadow">List All Credit Cards</button>
        		</form>
            </div>


            <div class="col-lg-7">
        		{{#flash}}
        			<div class="alert alert-{{type}}" role="alert" class="mb-3">
        				{{message}}
        			</div>
        		{{/flash}}

        		{{#cards}}
        			<ul class="list-group list-group-flush mt-3 text-start">
                        <li class="list-group-item"><b>CARD ID:</b> {{id}}</li>
                        <li class="list-group-item"><b>CUSTOMER ID:</b> {{customer}}</li>
                        <li class="list-group-item"><b>BRAND:</b> {{brand}}</li>
                        <li class="list-group-item"><b>CARD_EXP_MONTH:</b> {{exp_month}}</li>
                        <li class="list-group-item"><b>CARD_EXP_YEAR:</b> {{exp_year}}</li>
                        <li class="list-group-item"><b>CARD_LAST_4:</b> {{last4}}</li>
                    </ul>
        		{{/cards}}
            </div>

        </div>

	</div>

{{>partials/footer}}